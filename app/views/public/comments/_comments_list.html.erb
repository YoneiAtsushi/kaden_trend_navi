<% post.comments.each do |comment| %>
  <div class="card mb-3">
    <div class="card-body">
      <span class="comment-name small"><%= comment.user.name %></span>
      <span>
        <% if comment.user == current_user %>
          <%= link_to '削除', post_comment_path(post, comment), method: :delete, data: { confirm: "本当に消しますか？" }, remote: true %>
        <% end %>
      </span>
      <p class="card-text"><%= comment.text %></p>
    </div>
  </div>
<% end %>