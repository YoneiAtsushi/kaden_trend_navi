<div>
 <%= render 'public/genres/genre', genres: @genres %>
</div>

<h1>新着投稿</h1>
<p>
     <%= link_to '新しい順', posts_path(latest: "true") %>
     <%= link_to '古い順', posts_path(old: "true") %>
     <%= link_to '評価の高い順', posts_path(star_count_many: "true") %>
     <%= link_to '評価の低い順', posts_path(star_count_few: "true") %>
</p>

<% if !@posts.empty? %>
<% @posts.each do |post| %>
 <div>
   <p><%= link_to image_tag(post.user.get_profile_image, width: 100, height: 100), user_mypage_path(post.user) %></p>
   <p>投稿日：<%= post.created_at.strftime("%Y年%m月%d日") %></p>
   <p>タイトル：<%= link_to post.title, post_path(post.id) %></p>
   <p>ジャンル：<%= post.genre.name %></p>
   <p>型番：<%= post.product_name %></p>
</div>
<% end %>
<div class="d-flex justify-content-center">
  <%= paginate @posts %>
</div>
<% else %>
 まだ投稿がありません
<% end %>

<br><br><br><br><br><br><br><br><br>
