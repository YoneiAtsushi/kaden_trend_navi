<div>
  <h5 class="border p-3 my-3">
    <%= @user.name %>さんのマイページ
  </h5>
</div>

<div>
  <table>
    <tr>
      <td><p><%= image_tag @user.get_profile_image(100, 100),class: 'rounded-circle' %></p></td>
    </tr>
    <tr>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td><%= @user.sex %></td>
    </tr>
       <td><%= @user.email %></td>
  </table>

  <table>
    <div>
      <tr>
        <td>
          <% if @user.id == current_user.id && !current_user.guest_user? %>
            <div class="row">
              <%= link_to "プロフィールの編集", edit_information_path, class: "btn btn-outline-secondary btn-block" %>
            </div>
          <% end %>
        </td>
      </tr>
    </div>
  </table>
</div>

