<div class="row">
  <div class="col-md-1 mb-3" ></div>

<div>
  <h4>レビュー詳細</h4>
  <p>投稿日：<%= @post.created_at.strftime("%Y年%m月%d日") %></p>
  <p>ユーザー名: <%= @post.user.name %></p>
  <p>性別: <%= @post.user.sex %></p>
  <p>タイトル：<%= @post.title %></p>
  <p>ジャンル：<%= @post.genre.name %></p>
  <p>型番：<%= @post.product_name %></p>
  <%= render 'public/posts/static_rate', post: @post %>
  
  
</div>
<div>
  <p><%= image_tag @post.get_image, width: 100, height: 100 %></p>
  <p><%= @post.introduction %></p>
</div>
<!--なぜかroutesにdeleteのパスがない-->
<div><p><%= link_to "削除", admin_post_path(@post), class:"btn btn-sm btn-danger", method: :delete , data: {confirm: "本当に消しますか？"} %></p></div>

  <div class="col md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title">コメント欄</h5>
      </div>
      <div class="card-body">
        <div>
          <% @post.comments.each do |comment| %>
        <div class="card mb-3">
         <div class="card-body">
           <span class="comment-name small"><%= comment.user.name %></span>
           <span>
               <%= link_to '削除', admin_comment_path(comment), method: :delete %>
           </span>
         　<p class="card-text"><%= comment.text %></p>
         </div>
       </div>
     <% end %>
        </div>
