<div class="container">
  <div class="row d-flex justify-content-center">
    <h5 class="border p-3 my-3">
      <%= @user.name %>さんのマイページ
    </h5>
  </div>

  <div class="row d-flex justify-content-center">
    <div>
      <table class="table table-borderless">

        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <td>氏名</td>
          <td><%= @user.name %></td>
        </tr>

        <tr>
          <td>性別</td>
          <td><%= @user.sex %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @user.user_status %>
              <p>退会</p>
            <% else %>
              <p>有効</p>
            <% end %>
          </td>
        </tr>
      </table>

      <table class="table table-borderless">
        <div class="row">
          <tr>
            <td><%= link_to "編集する", edit_admin_user_path, class: "btn btn-outline-secondary btn-block" %></td>
          </tr>
        </div>
      </table>
    </div>
  </div>
</div>
  
<div class="row my-4">
  <h4 class="col-12 text-center border p-3 my-3">ユーザー投稿一覧</h4>
</div>
<div class="row">
  <div class="col-12 justify-content-center">
    <div class="mb-3 mx-auto" style="max-width: 600px; ">
      <div class="row no-gutters">
        <% if !@posts.empty? %>
          <% @posts.each do |post| %>
            <div class="card col-12" style="margin-bottom: 10px;">
              <div class="row">
                <div class="col-3 m-auto" style="padding-left: 40px;">
                  <%= image_tag post.user.get_profile_image, width: 100, height: 100, class: 'rounded-circle' %>
                </div>
                <div class="col-9">
                  <div class="card-body">
                    <h5 class="card-title"><%= link_to post.title, admin_post_path(post.id) %></h5>
                     <p class="card-text"><br>
                                          ジャンル：<%= post.genre.name %><br>
                                          型番：<%= post.product_name %>
                     </p>
                     <p class="card-text"><%= post.created_at.strftime("%Y年%m月%d日") %>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <div class=paginate>
        <%= paginate @posts %>
      </div>
    </div>
      <% else %>
      まだ投稿がありません
      <% end %>
  </div>
</div>
